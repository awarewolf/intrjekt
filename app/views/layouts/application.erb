<!DOCTYPE html>
<html>
<head>
  <title>Intrjekt</title>

  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <!-- wavesurfer.js -->
  <script src="/js/wavesurfer/wavesurfer.js"></script>
  <script src="/js/wavesurfer/util.js"></script>
  <script src="/js/wavesurfer/webaudio.js"></script>
  <script src="/js/wavesurfer/mediaelement.js"></script>
  <script src="/js/wavesurfer/drawer.js"></script>
  <script src="/js/wavesurfer/drawer.canvas.js"></script>
  <!-- from wavesurfer demo -->
  <script src="/js/wavesurfer/main.js"></script>
  <script src="/js/wavesurfer/trivia.js"></script>

  <script src="/js/jquery-1.11.3.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <!-- custom scripts -->
  <script src="/js/update-post.js"></script>
  <script src="/js/get-posts.js"></script>
  <script src="/js/send-json.js"></script>
</head>

<body>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Intrjekt</a>
    </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
        <ul class="nav navbar-nav">
        <% if logged_in? %>
          <li class=""><a href="/podcasts/new">Upload</a></li>
        <% end %>
          <li class=""><a href="/users/new">Sign up</a></li>
        </ul>
        <% if logged_in? %>
          <h3 class="navbar-text navbar-right">Signed in as <%= current_user.user_name %></h3>
          <form class="navbar-form navbar-right" method="get" action="sessions/logout">
            <button type="submit" value="Submit" class="btn btn-default">Log out</button>
          </form>
        <% else %>
          <form class="navbar-form navbar-right" method="post" action="/sessions/login">
            <div class="form-group">
              <input type="text" class="form-control" name="email" placeholder="Email">
              <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button type="submit" value="Submit" class="btn btn-default">Log in</button>
          </form>
        <% end %>
      </div>
    </div>
  </nav>

  <%= yield %>
</body>
</html>